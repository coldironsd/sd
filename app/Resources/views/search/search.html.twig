{% extends 'base.html.twig' %}

{% block body %}

<div class="container" style="margin-top:7em;">
<div class="row col-lg-80 col-lg-offset-30 center-block">
    
    <div class="row col-lg-12 col-lg-offset-1 form-inline">
        
        {{ form_start(form) }}
        {{ form_errors(form) }}
            <div class="col-lg-4 lg-input">{{ form_row(form.pickup_addr, {'id': 'autocomplete-pickupAddr', 'required': false}) }}</div>
            <div class="col-lg-4 lg-input">{{ form_row(form.dest_addr, {'id': '', 'required': false}) }}</div>
            {#<div class="col-lg-4">{{ form_row(form.pickup_addr, {'required': false}) }}</div>#}
            {#<div class="col-lg-4">{{ form_row(form.dest_addr, {'required': false}) }}</div>#}
        {{ form_end(form) }}
        
    </div>
    <div class="row col-lg-12">
        <table class="table" style="margin-top: 1em;">
            <thead>
              <tr>
                <th>Name</th>
                <th>Info</th>
                <th>From Where</th>
                <th>To Where</th>
                <th>Delivery Date</th>
                <th>Cost</th>
                <th>Take</th>
              </tr>
            </thead>
            <tbody>
                {% for req in requests %}
                  <tr>
                    <td>{{ req.name|e }}</td>
                    <td>{{ req.description|e }}</td>
                    <td>{{ req.pickupAddr|e }}</td>
                    <td>{{ req.destAddr|e }}</td>
                    <td>{{ req.deliveryDate|date('Y-m-d') }}</td>
                    <td>{{ req.cost|e }}</td>
                    <td><input type="submit" class="btn btn-default" value="Take"></input></td>
                  </tr>
                {% endfor %}
            </tbody>
          </table>
    </div>
</div>
</div>
{% endblock %}
