{% extends 'base.html.twig' %}

{% block body %}

    <!-- Header -->
    <div class="intro-header">
        <div class="container">

            <div class="row">
                <div class="col-lg-4">
                    <div class="intro-message">
                        <h2>Home</h2>
                        <form action="{{ path('home') }}" method="post">
                            <div class="form-group form-inline">
                                <label for="from">From:</label>
                                <input type="text" class="form-control" id="from" name="_from"/>
                            </div>
                            <div class="form-group form-inline">
                                <label for="destination">Destination:</label>
                                <input type="destination" class="form-control" id="destination" name="_destination" />
                            </div>

                            <button type="submit" class="btn btn-default">Submit</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->
{% endblock %}