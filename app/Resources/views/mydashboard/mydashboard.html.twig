{% extends 'base.html.twig' %}

{% block body %}

<div class="container" style="margin-top:4em;">
<div class="row col-lg-80 col-lg-offset-30">
    <table style="border-spacing: 10px;border-collapse: separate;">
        <tr>
           <th>Name</th><br>
           <th>Description</th>
           <th>Pickup Address</th>
           <th>Delivery Address</th>
           <th>Cost</th>
           <th>Due By</th>
           <th>Delivery By</th>
        </tr>
        {% if drs|length > 0%}
           {% for item in drs %}
        <tr>
           <td>{{ item.getName }}</td>
           <td>{{ item.getDescription }}</td>
           <td>{{ item.pickupAddr }}</td>
           <td>{{ item.destAddr }}</td>
           <td>{{ item.cost }}</td>
           {#<td>{{ item.deliveryDate }}</td>#}
           {#<td>{{ item.deliverUserId }}</td>#}
        </tr>
           {% endfor %}
        {% else %}
        <tr>
           <td colspan="2">No matching results found!</td>
        </tr>
        {% endif %}
    </table>
</div>
</div>
{% endblock %}
